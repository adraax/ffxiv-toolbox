{
  "name": "adraax-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "dev": "ng serve",
    "start": "ng serve --open",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "format:test": "prettier --list-different \"./projects/**/*.{ts,html,scss,json}\"",
    "format:write": "prettier --write \"./projects/**/*.{ts,html,scss,json}\"",
    "analyze": "ng build --stats-json --output-hashing none --named-chunks && esbuild-visualizer --template treemap --metadata dist/ffxiv-toolbox/stats.json --filename dist/ffxiv-toolbox/analyse/index.html && http-server -o -c-1 ./dist/ffxiv-toolbox/analyse/",
    "analyze:sme": "ng build --source-map --output-hashing none --named-chunks && source-map-explorer dist/ffxiv-toolbox/browser/*.js --html dist/ffxiv-toolbox/sme/index.html && http-server -o -c-1 ./dist/ffxiv-toolbox/sme/",
    "analyze:deps": "madge projects/ffxiv-toolbox/src/main.ts --ts-config tsconfig.json --image ./ffxiv-toolbox-dep-graph.png",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.2.1",
    "@angular/cdk": "^17.2.0",
    "@angular/common": "^17.2.1",
    "@angular/compiler": "^17.2.1",
    "@angular/core": "^17.2.1",
    "@angular/forms": "^17.2.1",
    "@angular/platform-browser": "^17.2.1",
    "@angular/platform-browser-dynamic": "^17.2.1",
    "@angular/router": "^17.2.1",
    "@taiga-ui/addon-charts": "^3.66.0",
    "@taiga-ui/addon-table": "^3.66.0",
    "@taiga-ui/addon-tablebars": "^3.66.0",
    "@taiga-ui/cdk": "^3.66.0",
    "@taiga-ui/core": "^3.66.0",
    "@taiga-ui/i18n": "3.66.0",
    "@taiga-ui/icons": "^3.66.0",
    "@taiga-ui/kit": "^3.66.0",
    "@taiga-ui/layout": "^3.66.0",
    "@taiga-ui/styles": "^3.66.0",
    "@tinkoff/ng-dompurify": "4.0.0",
    "dompurify": "3.0.6",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.2.0",
    "@angular-eslint/builder": "17.2.1",
    "@angular-eslint/eslint-plugin": "17.2.1",
    "@angular-eslint/eslint-plugin-template": "17.2.1",
    "@angular-eslint/schematics": "17.2.1",
    "@angular-eslint/template-parser": "17.2.1",
    "@angular/cli": "^17.2.0",
    "@angular/compiler-cli": "^17.2.1",
    "@types/dompurify": "3.0.5",
    "@types/jasmine": "~5.1.4",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "esbuild-visualizer": "^0.6.0",
    "eslint": "^8.56.0",
    "http-server": "^14.1.1",
    "jasmine-core": "~5.1.2",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "madge": "^6.1.0",
    "prettier": "^3.2.5",
    "source-map-explorer": "^2.5.3",
    "typescript": "~5.3.3"
  }
}